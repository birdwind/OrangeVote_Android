<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="132dp"
            android:layout_marginEnd="132dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/colorTheme"/>

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@id/ll_top"
                android:backgroundTint="@color/colorTheme"
                android:inputType="text"/>

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/colorTheme"/>

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@id/edt_username"
                android:backgroundTint="@color/colorTheme"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/tv_forgot_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_forgotPW"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/edt_password"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:text="@string/login_login"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_radius_theme_enabled"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/tv_forgot_pw"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:text="@string/login_register"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_radius_theme_enabled"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_main"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp">

            <View
                android:id="@+id/line1"
                style="@style/LighterDivider"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/tv_or"
                android:layout_centerVertical="true"
                android:background="@color/colorTheme"/>

            <TextView
                android:id="@+id/tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"/>

            <View
                android:id="@+id/line2"
                style="@style/LighterDivider"
                android:layout_toEndOf="@id/tv_or"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/colorTheme"/>
        </RelativeLayout>

</RelativeLayout>
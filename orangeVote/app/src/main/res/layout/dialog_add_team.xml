<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="40dp"
    android:paddingTop="@dimen/padding_large"
    android:paddingEnd="40dp"
    android:paddingBottom="@dimen/padding_large"
    android:background="@drawable/style_dialog_radius_board">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/psv_dialog_add_team_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:background="@drawable/style_background_radius_board_theme"
            android:gravity="center_vertical"
            android:hint="請選擇團隊"
            android:padding="@dimen/padding_small"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrey_text"
            app:spinner_popup_animation="fade"
            app:spinner_popup_background="@color/colorWhite"/>

        <EditText
            android:id="@+id/et_dialog_add_team_pass_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/psv_dialog_add_team_team"
            android:background="@drawable/style_background_radius_board_theme"
            android:hint="@string/add_team_passcode_hint"
            android:inputType="text"
            android:padding="@dimen/padding_small"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_dialog_add_team_confirm"
            style="@style/ThemeButton"
            android:layout_below="@id/et_dialog_add_team_pass_code"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:text="@string/confirm" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:orientation="vertical"
        android:background="@color/colorThemeGrey">

        <TextView
            android:id="@+id/tv_vote_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/tv_vote_team"
            android:text="隊長選舉"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_normal" />

        <TextView
            android:id="@+id/tv_vote_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="全部"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/textsize_small" />


        <TextView
            android:id="@+id/tv_vote_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_vote_title"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="這是對長選舉"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_small" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_vote_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_vote_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_vote_option"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_vote_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:background="@drawable/button_radius_theme_enabled"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_small"
                android:paddingTop="@dimen/padding_6dp"
                android:paddingEnd="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vote_multiply"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_vote_multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_2dp"
                    android:text="2"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_vote_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_radius_theme_enabled"
                android:paddingStart="@dimen/padding_small"
                android:paddingTop="@dimen/padding_6dp"
                android:paddingEnd="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_6dp"
                android:text="@string/vote_sign"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>